<h1>Your Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Account name</th>
      <th>Order in list</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.account_name %></td>
        <td><%= account.order_in_list %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Delete', account, method: :delete, data: { confirm: "Are you sure you want to delete account '#{account.account_name}'?" } %></td>
        <td><%= link_to 'Move Up', "/accounts/#{account.id}/move_up", method: :post %></td>
        <td><%= link_to 'Move Down', "/accounts/#{account.id}/move_down", method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

