<h1>Spending Summary by Transaction Direction</h1>

<div class="summary_type_navbar">
  <%= link_to "By Day", summaries_by_category_path + "?averaging_time=day", {class: mark_current_tab(@averaging_time,"day")} %>
  <%= link_to "By Month", summaries_by_category_path + "?averaging_time=month", {class: mark_current_tab(@averaging_time,"month")} %>
  <%= link_to "By Year", summaries_by_category_path + "?averaging_time=year", {class: mark_current_tab(@averaging_time,"year")} %>
  <%= link_to "By Account", summaries_by_account_path %>
  <%= link_to "By Category", summaries_by_category_path %>
</div>

<div class="filter">
  <%= form_tag request.path, method: 'get' do %>
    <div class="field number">
      <%= label_tag :year %><br>
      <%= text_field_tag :year, params[:year] %>
    </div>
    <div class="field number">
      <%= label_tag :month %><br>
      <%= text_field_tag :month, params[:month] %>
    </div>
    <div class="field number">
      <%= label_tag :day %><br>
      <%= text_field_tag :day, params[:day] %>
    </div>
    <div class="actions">
      <%= submit_tag "Search" %>
    </div>
  <% end %>
</div>

<%= render 'table' %>