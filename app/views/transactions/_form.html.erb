<%= form_for(@transaction) do |f| %>
  <% if @transaction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

      <ul>
      <% @transaction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :transaction_date, "Date" %>
    <%= f.date_select :transaction_date %>
  </div>
  <div class="field">
    <%= f.label :vendor_name, "Vendor Name" %>
    <%= f.text_field :vendor_name %>
  </div>
  <div class="field">
    <%= f.label :account %>
    <%= f.collection_select :account_id, @user_accounts, :id, :account_name %>
    <%= link_to "Add / Edit", new_account_path %>
  </div>
  <div class="field">
    <%= f.label :transaction_category, "Spending Category" %>
    <%= f.collection_select :transaction_category_id, @user_transaction_categories, :id, :name %>
    <%= link_to "Add / Edit", new_transaction_category_path %>
  </div>
  <div class="field">
    <%= f.label :amount, "Amount Spent" %>
    <%= f.number_field :amount, step: 0.01%>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-large btn-primary"%>
  </div>
<% end %>
